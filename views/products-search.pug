extends layout.pug
block content
  table(class="table")
    thead
      tr
        th(scope="col") ID
        th(scope="col") Title
        th(scope="col") Price
        th(scope="col") Description
        th(scope="col") Action
    tbody
      each product in products
        tr
          th(scope="row") #{product.id}
          td #{product.title}
          td #{product.price}
          td #{product.description}
          td
            button(type="button" class="btn btn-success") Buy
      else
        tr No products returned