extends layout.pug
block content
	h3 #{productType.name}
	table(class="table")
			thead
				tr
					//- th(scope="col") ID
					th(scope="col") Title
					th(scope="col") Price
					th(scope="col") Description
					th(scope="col") Action
			tbody
				each product in productType.Products
					tr
						//- th(scope="row") #{product.id}
						td
							a(href=`/products/${product.id}`) #{product.title}
						td $#{Number.parseFloat(product.price).toFixed(2)}
						td #{product.description}
						td
							button(type="button" class="btn btn-success") Add to Cart
