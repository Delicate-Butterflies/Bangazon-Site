.row
	.col-6
		form(method="post")
			.form-group
				label(class="form-control-label" for="title") Product Name
				input(id="title" type="text" class="form-control" placeholder="Green Oven Mitts" name="title" required)
			.form-group
				label(class="form-control-label" for="price") Price
				input(id="price" type="text" class="form-control" placeholder="15.99" name="price" required)
			.form-group
				label(class="form-control-label" for="description") Description
				input(id="description" type="text" class="form-control" placeholder="Mitts for protecting your hands" name="description" required)
			.form-group
				label(class="form-control-label" for="productTypeId") Product Type
				select(class="form-control" id="productTypeId" name="productTypeId" required)
					each productType in productTypes
						option(value=productType.id) #{productType.name}
				label(class="form-control-label" for="quantity") Quantity
				input(id="quantity" type="text" class="form-control" placeholder="15" name="quantity" required)
				label(class="form-control-label" for="pictureUrl") ImageURL
				input(id="pictureUrl" type="text" class="form-control" name="pictureUrl" required)

			button(type="submit" class="btn-primary") Submit
